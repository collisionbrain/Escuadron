<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:singleLine="true"
                android:hint="@string/strCalle"
                android:textColorHint="@color/gray"
                android:text="Laureano Estudillo"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtNumExt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:singleLine="true"
                android:hint="@string/strNumeroExt"
                android:textColorHint="@color/gray"
                android:text="39B"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtNumInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:singleLine="true"
                android:hint="@string/strNumeroInt"
                android:textColorHint="@color/gray"
                android:text="39b bis"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtCpostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="number"
                android:singleLine="true"
                android:hint="@string/strCpostal"
                android:maxLength="5"
                android:textColorHint="@color/gray"
                android:text="09140"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtCol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:singleLine="true"
                android:maxLength="50"
                android:hint="@string/strColonia"
                android:textColorHint="@color/gray"
                android:text="Ampliacion Santa Martha"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtMun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:maxLength="50"
                android:hint="@string/strMunicipio"
                android:textColorHint="@color/gray"
                android:text="Iztapalapa"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/edtEst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:background="@drawable/editext_line"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:maxLength="50"
                android:hint="@string/strEstado"
                android:textColorHint="@color/gray"
                android:text="CDMX"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyBoton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center">

        <com.unstoppable.submitbuttonview.SubmitButton
            android:id="@+id/btnSiguienteAddress"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:padding="25dp"
            app:buttonText="Siguiente"
            app:buttonTextSize="25sp"
            app:buttonColor="@color/blueBorders"
            />
    </LinearLayout>
</LinearLayout>