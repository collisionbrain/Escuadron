<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/detail_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:weightSum="100">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="20"
           android:padding="10dp">
           <TextView
               android:id="@+id/txtFechaCompra"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textSize="18sp"
               android:text="Fecha de compra"/>
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:padding="10dp">
            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="Nombre cliente"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlProducts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60" >

        </RelativeLayout>
    </LinearLayout>

        <org.osmdroid.views.MapView
            android:id="@+id/mapview1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            tilesource="Positron" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center">

        <com.unstoppable.submitbuttonview.SubmitButton
            android:id="@+id/btnFinishMap"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:padding="25dp"
            app:buttonText="Entregar"
            app:buttonTextSize="25sp"
            app:buttonColor="@color/blueBorders"
            />
    </LinearLayout>
</LinearLayout>

