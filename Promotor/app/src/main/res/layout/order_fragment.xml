<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/green_toolbar">

       <TextView
           android:id="@+id/txtTotal"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="JUAN CARLOS PEDROZA PEREZ"
           android:textColor="@color/black"
           android:textSize="21sp"
           android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center">
        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="15dp"
            android:text="XXXXXXXXXXXXXXX"
            app:height_weight="0.8"
            app:use_gradient="true"
            app:width_weight="0.6" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/txtEstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:text="XXXXXXXXXXXXXXX"
            app:height_weight="0.8"
            app:width_weight="1.0"
            app:corners="32" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/txtDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="15dp"
            android:text="XXXXXXXXXXXXXXX"
            app:height_weight="0.8"
            app:width_weight="0.4"
            app:corners="16"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/txtProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="15dp"
            android:text="XXXXXXXXXXXXXXX"
            app:height_weight="0.8"
            app:width_weight="0.9"
            app:corners="8"
            app:custom_color="@android:color/holo_green_dark"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llyBoton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="2dp"
        android:gravity="center">
        <com.unstoppable.submitbuttonview.SubmitButton
            android:id="@+id/btnFinalizar"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:padding="25dp"
            app:buttonText="FINALIZAR"
            app:buttonTextSize="25sp"
            app:buttonColor="@color/blueBorders"/>

    </LinearLayout>
</LinearLayout>